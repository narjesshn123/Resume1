@model Person
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="title">اطلاعات پایه </h3>

    <div class="panel">

        <table>
   @*  <thead>
        <tr>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>ایمیل</th>
            <th>شماره تلفن</th>
          
        </tr>
    </thead> *@
    <tbody>
        
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Family</td>
                <td>@Model.Email</td>
                <td>@Model.PhoneNumber</td>
            
            </tr>
        
    </tbody>
      
</table>
        <button class="button_edit" onclick="">
            <a class="edit_text" asp-area="" asp-controller="Home" asp-action="Base" asp-route-id="@Model.Id"> 
                ویرایش</a>
        </button>
    </div>
    <h3 class="title">اطلاعات شغلی </h3>

    <div class="panel">
    <table>
        <thead>
            <tr>
                <th>عنوان شغلی</th>
         
            </tr>
        </thead>
        <tbody>
            

            <tr>
            
                <td>@Model.Job?.Title</td>

            </tr>

        </tbody>
     
    </table>
        <button class="button_edit">
            <a class="edit_text" asp-area="" asp-controller="Home" asp-action="Job">ویرایش</a>
        </button>
    </div>
    <h3 class="title">زبان های خارجه  </h3>

    <div class="panel">
    <table>
        <thead>
            <tr>
                <th>زبان</th>

            </tr>
        </thead>
        <tbody>


            <tr>

                <td>@Model.PersonLanguages?.FirstOrDefault()?.Languages?.Name</td>

            </tr>

        </tbody>
        </table>

        <button class="button_edit" onclick="">
            <a class="edit_text" asp-area="" asp-controller="Home" asp-action="Language">ویرایش</a>
        </button>
    </div>
    <h3 class="title">مهارت ها  </h3>

    <div class="panel">
    <table>
        <thead>
            <tr>
                <th>مهارت</th>

            </tr>
        </thead>
        <tbody>


            <tr>

                <td>@Model.PersonSkills?.FirstOrDefault()?.Skills?.Title</td>

            </tr>

        </tbody>
        </table>

        <button class="button_edit">
            <a class="edit_text" asp-area="" asp-controller="Home" asp-action="Skill">ویرایش</a>
        </button>
    </div>
    <h3 class="title">سوابق کاری  </h3>

    <div class="panel">
    <table>
        <thead>
            <tr>
                <th>تجربه کاری </th>

            </tr>
        </thead>
        <tbody>


            <tr>

                <td>@Model.WorkExperiences?.FirstOrDefault()?.Title</td>

            </tr>

        </tbody>
        </table>
         
        <button class="button_edit" onclick="">
            <a class="edit_text" asp-area="" asp-controller="Home" asp-action="Work">ویرایش</a>
        </button>
    </div>
</div>
<style>
    .title{
        display: flex;
        padding-right: 15px;
    }
    .button_edit {
        background-color: #008CBA; /* Green */
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .panel{
        border: 1px solid;
        border-radius: 10px;
        width: 65%;
        display: flex;
        justify-content: space-between;  
        padding: 10px;
        margin: 10px;
    }

    .edit_text{
        color:white; 
        text-decoration: none;
    }
</style>